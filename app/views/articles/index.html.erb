<div class="container mt-5">
  <h1 class="mb-4">List of articles</h1>

  <ul class="list-group mb-4">
    <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to article.title, article_path(article), class: "text-decoration-none" %>
        <%= link_to article_path(article), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" do %>
          <i class="fa-solid fa-trash"></i> Delete
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create New Article", new_article_path, class: "btn btn-primary" %>
</div>
